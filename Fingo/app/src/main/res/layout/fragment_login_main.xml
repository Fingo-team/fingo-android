<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.teamfingo.android.fingo.login.FragmentLoginMain">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2"
        android:scaleType="fitXY" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="이메일로 가입"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_email_sign_up"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button"
            android:background="@android:color/background_light"
            android:textStyle="normal|bold" />

        <Button
            android:text="페북으로 가입"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_facebook_sign_up"
            android:layout_weight="1"
            android:background="@color/com_facebook_blue"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            style="@style/com_facebook_loginview_default_style" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="100dp">

        <TextView
            android:text="이미 회원이세요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@android:color/background_light"
            />

        <Button
            android:text="로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_login"
            android:textAppearance="@style/TextAppearance.AppCompat"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="normal|bold|italic"
            android:textColor="@android:color/background_light"
             />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp">

        <TextView
            android:text="Fingo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="50dp" />

        <TextView
            android:text="감동을"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="50dp" />

        <TextView
            android:text="나누는"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="50dp" />

        <TextView
            android:text="놀이터"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="50dp" />
    </LinearLayout>

</RelativeLayout>
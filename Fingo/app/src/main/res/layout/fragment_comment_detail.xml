<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamfingo.android.fingo.mypage.FragmentCommentDetail">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp">

                <ImageButton
                    app:srcCompat="@drawable/com_facebook_tooltip_black_bottomnub"
                    android:id="@+id/button_ordering"
                    android:layout_weight="0.08"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_height="20dp"
                    android:layout_width="20dp" />

                <TextView
                    android:text="작성순"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_ordering"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView_comment_detail"
                android:animationCache="false"
                app:stackFromEnd="false"
                android:layout_marginTop="8dp"
                android:layout_weight="4.94"
                android:scrollbars="vertical" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
